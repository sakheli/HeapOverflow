@model IEnumerable<HeapOverflow.Models.PostModel>

@{
    ViewBag.Title = "Index";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.categoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.username)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id+1 })
                @Html.ActionLink("Details", "Details", new { id = item.id+1 })
                @Html.ActionLink("Delete", "Delete", new { id = item.id+1 })
            </td>
        </tr>
    }

</table>

@if (TempData["Error"] != null)
{
    <div>@TempData["Error"]</div>
}